{
  "name": "e-commerce_testing",
  "private": true,
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"src/sass/**/*.scss\" --syntax scss",
    "eslint": "eslint \"src/js/**/*.js\"",
    "test": "npm run editorconfig && npm run stylelint && npm run eslint",
    "build": "gulp build",
    "start": "npm run build && gulp serve",
    "watch": "gulp build:dev && gulp serve:dev"
  },
  "browserslist": [
    "last 2 versions",
    "not ie > 0",
    "not ie_mob > 0",
    "not dead",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "src/**/*.html",
    "src/js/modules/**/*.js",
    "src/sass/global/**/*.scss",
    "src/sass/blocks/**/*.scss"
  ],
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "browser-sync": "^2.26.5",
    "del": "^5.1.0",
    "eslint": "^6.6.0",
    "eslint-config-htmlacademy": "^0.5.2",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.0",
    "gulp-csso": "^3.0.1",
    "gulp-imagemin": "^6.1.1",
    "gulp-newer": "^1.4.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^1.4.0",
    "gulp-rigger": "^0.5.8",
    "gulp-sass": "^4.0.2",
    "gulp-sass-bulk-import": "^1.0.1",
    "gulp-svgstore": "^7.0.1",
    "gulp-uglify": "^3.0.2",
    "stylelint": "^11.1.1",
    "stylelint-config-htmlacademy": "^0.1.3"
  },
  "dependencies": {
    "gulp-sourcemaps": "^2.6.5"
  }
}
